{
	"compilerOptions": {
		// required
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		"downlevelIteration": true,
		"module": "commonjs",
		"noLib": true,
		"strict": true,
		"target": "es2020",
		"typeRoots": [
			"node_modules/@rbxts"
		],
		"plugins": [{
			"transform": "rbxts-transformer-services"
		}],
		"moduleResolution": "Node",
		// required, configurable
		"rootDir": "src",
		"outDir": "out",
		// optional
		"baseUrl": "src",
		"declaration": false,
		// optional, non-configurable
		"jsx": "react",
		"jsxFactory": "Roact.createElement"
	}
}
